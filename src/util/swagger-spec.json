{
    "openapi": "3.0.0",
    "info": {
        "title": "PolySim Swagger UI",
        "version": "1.0"
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [],
    "paths": {
        "/api/health": {
            "get": {
                "description": "Returns the health status",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/api/logs": {
            "post": {
                "description": "Receives client-side logs",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "logs": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "level": {
                                                    "type": "string"
                                                },
                                                "message": {
                                                    "type": "string"
                                                },
                                                "data": {
                                                    "type": "object"
                                                },
                                                "component": {
                                                    "type": "string"
                                                },
                                                "timestamp": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Logs received successfully"
                    },
                    "400": {
                        "description": "Invalid request format"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/test-connection": {
            "post": {
                "description": "Tests the database connection",
                "responses": {
                    "200": {
                        "description": "Database connection successful"
                    },
                    "500": {
                        "description": "Database connection failed"
                    }
                }
            }
        }
    },
    "tags": []
}
